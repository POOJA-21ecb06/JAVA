import java.util.*;
public class temp
{
public static void main(String[] args) {
Scanner sc = new Scanner(System.in);
int n=sc.nextInt();
int arr[]={500,200,100,50,20,10,2,1};
int new_ar[]=new int[8];
int sum=0;
for(int i=0;i<8;i++){
       if(n>=arr[i]){
           new_ar[i]=n/arr[i];
           n=n%arr[i];
           sum=sum+new_ar[i];
       }
    }
    System.out.print(sum);
}
}
